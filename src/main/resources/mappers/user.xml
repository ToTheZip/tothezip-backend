<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tothezip.user.model.mapper.UserMapper">

    <resultMap id="UserResultMap" type="UserDto">
        <id     column="user_id"     property="userId"/>
        <result column="email"       property="email"/>
        <result column="password"    property="password"/>
        <result column="user_name"   property="userName"/>
        <result column="profile_img" property="profileImg"/>
    </resultMap>

    <resultMap id="PreferenceResultMap" type="PreferenceDto">
        <!-- 가격 범위 -->
        <result column="min_price" property="minPrice"/>
        <result column="max_price" property="maxPrice"/>

        <!-- 평수 범위 -->
        <result column="min_area"  property="minArea"/>
        <result column="max_area"  property="maxArea"/>
    </resultMap>


    <!-- 회원 가입 -->
    <insert id="regist"
            parameterType="UserDto"
            useGeneratedKeys="true"
            keyProperty="userId">
        INSERT INTO users (email, password, user_name, profile_img)
        VALUES (#{email}, #{password}, #{userName}, #{profileImg})
    </insert>

    <!-- 이메일 중복 확인 -->
    <select id="emailDuplicate"
            parameterType="string"
            resultType="boolean">
        SELECT COUNT(*) > 0
        FROM users
        WHERE email = #{email}
    </select>

    <!-- 로그인 -->
<!--    <select id="login"-->
<!--            resultMap="UserResultMap">-->
<!--        SELECT user_id, email, password, user_name, profile_img-->
<!--        FROM users-->
<!--        WHERE email = #{email}-->
<!--        AND password = #{password}-->
<!--    </select>-->
    <select id="findByEmail"
            parameterType="string"
            resultMap="UserResultMap">
        SELECT user_id, email, password, user_name, profile_img
        FROM users
        WHERE email = #{email}
    </select>

    <!-- 회원 정보 조회 -->
    <select id="getInfo"
            parameterType="int"
            resultMap="UserResultMap">
        SELECT user_id, email, password, user_name, profile_img
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- 회원 정보 수정 -->
    <!-- null 값 방지하려면 코드 추가 -->
    <update id="update"
            parameterType="UserDto">
        UPDATE users
        SET email = #{email}, password = #{password}, user_name = #{userName}, profile_img = #{profileImg}
        WHERE user_id = #{userId}
    </update>

    <!-- 회원 탈퇴 -->
    <delete id="delete"
            parameterType="int">
        DELETE FROM users
        WHERE user_id = #{userId}
    </delete>

    <!-- 사용자 관심 태그 전부 삭제 -->
    <delete id="deleteUserPreferences" parameterType="int">
        DELETE FROM user_preferences_tags
        WHERE user_id = #{userId}
    </delete>

    <!-- 사용자 관심 태그 여러 개 추가 -->
    <insert id="insertUserPreferences">
        INSERT INTO user_preferences_tags (user_id, tag_id)
        VALUES
        <foreach collection="tagIds" item="tagId" separator=",">
            (#{userId}, #{tagId})
        </foreach>
    </insert>

    <!-- 사용자 관심 태그 조회 -->
    <select id="getUserPreferences"
            parameterType="int"
            resultType="int">
        SELECT tag_id
        FROM user_preferences_tags
        WHERE user_id = #{userId}
    </select>

    <!-- 희망 가격, 평수 저장 -->
    <insert id="savePreferenceRange">
        INSERT INTO preferences (user_id, min_price, max_price, min_area, max_area)
        VALUES (#{userId}, #{pref.minPrice}, #{pref.maxPrice}, #{pref.minArea}, #{pref.maxArea})
        ON DUPLICATE KEY UPDATE
        min_price = VALUES(min_price),
        max_price = VALUES(max_price),
        min_area  = VALUES(min_area),
        max_area  = VALUES(max_area)
    </insert>

    <!-- 희망 가격, 평수 조회 -->
    <!-- tagIds가 null로 리턴되는데, resultmap으로 안하고 min_price as minPrice로 바꾸면 됨. -->
    <select id="getPreferenceRange"
            parameterType="int"
            resultMap="PreferenceResultMap">
        SELECT
        min_price, max_price, min_area, max_area
        FROM preferences
        WHERE user_id = #{userId}
    </select>
</mapper>